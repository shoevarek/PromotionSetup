<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/view_offerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Spend 50$ and get 5$ off"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/view_bonusAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_offerText"
        android:text=" Bonus amount: 5$" />

    <TextView
        android:id="@+id/view_transactionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_bonusAmount"
        android:text="Transaction amount: 50$" />

    <TextView
        android:id="@+id/view_offerStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_transactionAmount"
        android:text="Start date: 2015-07-21" />

    <TextView
        android:id="@+id/view_offerEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_offerStartDate"
        android:text="End date: 2015-07-22" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/view_report"
        android:layout_below="@+id/view_offerEndDate"
        android:layout_alignParentStart="true"
        android:src="@drawable/graph1" />

    <Button
        android:id="@+id/view_cancel_button"
        style="?android:textAppearanceSmall"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_report"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:elegantTextHeight="true"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/cancel_button"
        android:textStyle="bold" />




</RelativeLayout>